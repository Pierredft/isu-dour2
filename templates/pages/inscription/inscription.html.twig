{% extends 'base.html.twig' %}

{% block title %}ISU DOUR - Inscription{% endblock %}

{% block body %}
<div class="m-5 mx-lg-5 mx-md-4 mx-sm-3 mx-2 bloc-blanc rounded-4 p-3 p-sm-4 p-md-5">
    <div class="container p-0 d-flex flex-column gap-3 gap-sm-4 gap-lg-5">
        <h1 class="text-center fw-bold">Inscriptions</h1>
        {% for inscription in inscriptions %}
            <div class="bg-body border-custom p-3 p-sm-4">
                <h1 class="text-center">{{inscription.titre}}</h1>
                <div  class="text-center mt-5 mb-5">
                    {{inscription.texte|raw}}
                </div>
                <div class="pdf-container d-flex justify-content-center align-items-center flex-wrap gap-4">
                    {% for pdf in inscription.pdfs %}
                        {% if pdf is not null and pdf.filename %}
                            <iframe src="{{asset('/pdfs/'~ pdf.filename)}}" width="400" height="300"></iframe>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
