{% extends 'base.html.twig' %}

{% block title %}ISU DOUR - Calendrier{% endblock %}

{% block body %}
<div class="m-5 mx-lg-5 mx-md-4 mx-sm-3 mx-2 bloc-blanc rounded-4 p-3 p-sm-4 p-md-5">
    <div class="container p-0 d-flex flex-column gap-3 gap-sm-4 gap-lg-5">
        <h1 class="text-center fw-bold">Calendrier</h1>
        {% for calendrier in calendriers %}
            <div class="bg-body border-custom">
                <h1 class="text-center mt-5">{{calendrier.titre}}</h1>
                <div class="text-center mt-5 mb-5">
                    <h3>{{calendrier.pdf.titre}}</h3>
                </div>
                <div class="pdf-container d-flex justify-content-center align-items-center">
                    {% if calendrier.pdf is not null and calendrier.pdf.filename %}
                        <iframe class="pdf-item mb-5" src="{{asset('/pdfs/'~ calendrier.pdf.filename)}}" width="400" height="300"></iframe>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
