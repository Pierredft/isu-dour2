{% extends 'base.html.twig' %}

{% block title %}ISU DOUR - Contacts{% endblock %}

{% block body %}
    <div class="m-5 mx-lg-5 mx-md-4 mx-sm-3 mx-2 bloc-blanc rounded-4 p-3 p-sm-4 p-md-5">
        <div class="container p-0">
            <div class="row g-md-5 g-sm-4 g-3">
                <h1 class="text-center fw-bold">Contacts</h1>
                {% for contact in contacts %}
                    {% if contact.texte %}
                        <div class="text-center bg-body border-custom p-3 p-sm-4">{{contact.texte|raw}}</div>
                    {% endif %}
                {% endfor %}
                <div class="table-responsive bg-body border-custom p-3 p-sm-4">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">Fonction</th>
                                <th scope="col" class="text-center">Personne Ã  contacter</th>
                                <th scope="col" class="text-center">E-Mail</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for personnel in personnels %}
                            <tr class="text-center">
                                <td scope="row">{{personnel.fonction}}</td>
                                <td>{{personnel.pronom}} {{personnel.nom}} {{personnel.prenom}}</td>
                                <td><a href="mailto:{{personnel.email}}">{{personnel.email}}</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
