{% extends 'base.html.twig' %}

{% block title %}ISU DOUR - Accès{% endblock %}

{% block body %}
<div class="m-5 mx-lg-5 mx-md-4 mx-sm-3 mx-2 bloc-blanc rounded-4 p-3 p-sm-4 p-md-5">
    <div class="container p-0 d-flex flex-column gap-3 gap-sm-4 gap-lg-5">
        <h1 class="fw-bold text-center">Accès</h1>
        {% for acces in access %}
            <div class="bg-body border-custom">
                <div class="text-center">
                    {% if acces.logo is not null and acces.logo.filename is not null %}
                        <img class="imgLocomotion mt-3" src="{{asset('/images/'~ acces.logo.filename)}}" alt="logo accès">
                    {% endif %}
                </div>
                <h1 class="text-center mt-3 mb-5">{{acces.titre}}</h1>
                <div class="pdf-container d-flex justify-content-center align-items-center">
                    {% if acces.pdf is not null and acces.pdf.filename %}
                        <iframe class="pdf-item mb-5" src="{{asset('/pdfs/'~ acces.pdf.filename)}}" width="400" height="300"></iframe>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
